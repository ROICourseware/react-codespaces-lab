{
  "name": "React (Vite) devcontainer",
  "image": "mcr.microsoft.com/devcontainers/base:jammy",

  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },

  "postCreateCommand": "npm install",
  "forwardPorts": [5173],

  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "eamodio.gitlens"
      ]
    }
  }
}
